<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="@dimen/controls_row_height"
    android:layout_width="match_parent"
    android:id="@+id/layout_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/backgroundcard"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉ còn là quá khứ"
        android:fontFamily="../assets/font/LithosPro-Regular.otf"
        android:textAlignment="center"
        android:textSize="20dp"/>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_btn_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/ic_skipprev"/>

        <ImageView
            android:id="@+id/play_pause_btn_widget"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/ic_play"/>

        <ImageView
            android:id="@+id/next_btn_widget"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_skip"/>

    </LinearLayout>
</LinearLayout>
