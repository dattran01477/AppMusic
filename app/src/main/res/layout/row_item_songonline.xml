<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="3dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="8dp"

    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundcard"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="6dp"
        android:paddingBottom="3dp"
        android:onClick="songOnlinePick"
        android:id="@+id/card_row_songonline">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/fl_code"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_song_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/lithosproregular"
            android:textAlignment="center"
            android:textColor="@color/colorTextPlaylist"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_url_song_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/lithosproregular"
            android:textColor="@color/colorTextPlaylist"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_artist_song_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lithosproregular"
            android:textColor="@color/colorTextPlaylist"
            android:textSize="10dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>